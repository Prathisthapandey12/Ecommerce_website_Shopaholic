<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopaholic</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="fixed top-0 w-full flex gap-4 justify-end text-zinc-700">
      <a class="mt-2" href="/shop">Shop</a>
      <a class="mt-2" href="/vieworders">My Orders🛍️</a>
      <a class="mt-2" href="/cart">Cart🛒</a>
      <a class="mt-2 text-red-700 mr-2" href="/users/logout" >Logout</a>
    </div>

    <h1 class="text-2xl text-zinc-700 mt-12 ml-6">Your wishing Cart 🛒</h1>
    <div class="ml-9 mt-10 flex flex-col justify-start gap-4">
      
    <% user.cart.forEach(function(product){ %>
        <div class="border-2 border-zinc-300 w-1/3 h-60 flex flex-wrap justify-start bg-gray-50 rounded-lg text-xs">
          <div class="mt-8 w-1/3">
           <img class="p-5 w-full h-40 " src="data:image/jpeg;base64,<%= product.image.toString('base64') %>">
          </div>
          <div class="mt-14 w-2/3 flex flex-col justify-start">
           <h1 class=""><%= product.name %></h1>
           <h1 class="line-through">₹<%= product.price %></h1>
           <h1 class="text-red-400 text-xl">-<%= product.discount %>% OFF </h1>
           <h1 class="font-semibold text-xl">₹<%=  Math.round(product.price -  ((product.price * product.discount)/100)) %> </h1>
           <div class="mt-2 flex gap-5 text-xs">
            <a href="/placeorderbycart/<%= product._id %>"><button  class="bg-zinc-500 text-white rounded hover:bg-blue-700" type="submit"> Place Order </button></a>
            <a href="/removefromcart/<%= product._id %>"><button  class="bg-zinc-500 text-white rounded hover:bg-blue-700" type="submit"> Remove from cart </button></a>
           </div>
          </div>
        </div>
    <% }) %>

    </div> 
</body>
</html>
